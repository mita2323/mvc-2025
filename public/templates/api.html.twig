{% extends 'base.html.twig' %}

{% block title %}API Översikt{% endblock %}

{% block body %}
    <main>
        <div class="api-container">
            <h1>API</h1>
            <p>Välkommen! Här finns en sammanställning av alla JSON router som webbplatsen erbjuder:</p>

            <table>
                <thead>
                    <tr>
                        <th>Namn</th>
                        <th>Route</th>
                        <th>Beskrivning</th>
                    </tr>
                </thead>
                <tbody>
                    {% for route in routes %}
                        <tr>
                            <td>{{ route.name }}</td>
                            <td><a href="{{ route.route }}" target="_blank">{{ route.route }}</a></td>
                            <td>{{ route.description }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}