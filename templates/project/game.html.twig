{% extends 'project-base.html.twig' %}

{% block title %}BlackJack{% endblock %}

{% block body %}
<main class="project">
    <div class="card21">
        <h1>Spela Blackjack</h1>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% if status == 'not_started' %}
            <form action="{{ path('blackjack_bet') }}" method="post">
                <div class="player-field">
                    <label for="player_name">Ditt namn:</label>
                    <input type="text" id="player_name" name="player_name" required autofocus>
                </div>
                <div class="player-field">
                    <label for="num_hands">Antal händer att spela (1-3):</label>
                    <input type="number" id="num_hands" name="num_hands" min="1" max="3" value="1" required title="Välj hur många händer du vill spela samtidigt mot dealern.">
                </div>
                <button type="submit">Fortsätt</button>
            </form>
        {% endif %}
        <p class="link">
            <a href="{{ path('rules') }}">Regler</a>
        </p>
    </div>
</main>
{% endblock %}