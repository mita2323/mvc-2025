{% extends 'base.html.twig' %}

{% block title %}Draw Card{% endblock %}

{% block body %}
<main>
    <div class="card-game">
        <h1>Draw Card</h1>

        {% if hand is not empty %}
            <div class="deck">
                {% for card in hand %}
                    <div class="card {{ card.getSuit() }}">
                        {{ card|default('Invalid card') }}
                    </div>
                {% endfor %}
            </div>
            <p>Cards remaining: {{ remaining }}</p>
        {% else %}
            <p>{{ message|default('No cards available.') }}</p>
        {% endif %}

        <p><a href="{{ path('deck_draw') }}">Draw another card</a></p>
    </div>
</main>
{% endblock %}
